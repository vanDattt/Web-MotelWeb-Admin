<link rel="stylesheet" href="css/login.css">
<link rel="stylesheet" href="style.css">
<link rel="stylesheet" href="css/bootstrap.min.css">

<div class="row" style="min-height: 100%">
    <div class="col-md-6 mx-auto p-0">
        <div class="card">
            <div class="login-box">
                <div class="login-snip"> <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Login</label>
                                          <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>

                      <div class="login-space">
                          <div class="login">
                            {{#wrongPassword}}
                                <b style="color: white">Email and password aren't correct</b>
                            {{/wrongPassword}}
                            <form method="post">
                              <div class="group"> <label for="user" class="label">Email Address</label>
                                 <input id="user" type="text" class="input" name="email" placeholder="Enter Email (19120189@student.hcmus.edu.vn)"/> </div>
                              <div class="group"> <label for="pass" class="label">Password</label>
                                 <input id="pass" type="password" class="input" name="password" data-type="password" placeholder="Enter your password (189)"/> </div>
                              <div class="group"> <input id="check" type="checkbox" class="check" checked> <label for="check"><span class="icon"></span> Keep me Signed in</label> </div>
                              <div class="group"> <button type="submit" class="button" onclick="signIn()" >Sign In </button> </div>
                              <div class="hr"></div>
                              <div class="foot"> <a href="./register">Don't have an account? Register Now!</a> </div>
                              <div class="foot"> <a href="#">Forgot Password?</a> </div>
                            </form>
                          </div>
                      </div>

                </div>
            </div>
        </div>
    </div>
</div>
